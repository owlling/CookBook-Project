<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:background="#eeFFFFFF"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            tools:src="@mipmap/icon_app_cookbook" />

        <LinearLayout
            android:id="@+id/llUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black_alpha_30"
                tools:text="发布人昵称" />

            <TextView
                android:id="@+id/tvPostTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black_alpha_12"
                tools:text="1分钟前" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvWatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_like"
            android:paddingStart="10dp"
            android:paddingTop="2dp"
            android:paddingEnd="10dp"
            android:textSize="13sp"
            android:paddingBottom="2dp"
            android:text="关注"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="@color/color_text_gray_darker"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/ivImg"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            tools:src="@mipmap/icon_app_cookbook" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvCommentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_mode_comment_black_24dp"
            android:drawablePadding="8dp"
            android:gravity="center"
            tools:text="200" />

        <TextView
            android:id="@+id/tvLikedCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="8dp"
            android:drawableStart="@drawable/ic_thumb_up_black_24dp"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:textColor="@color/black_alpha_12"
            tools:text="20" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cardComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:cardBackgroundColor="#f5f9fa"
        app:cardCornerRadius="2dp"
        app:cardElevation="0dp"
        android:layout_margin="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="6dp">

            <TextView
                android:id="@+id/tvComment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                tools:text="路人甲:沙发" />

            <TextView
                android:id="@+id/tvComment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                tools:text="路人乙:板凳" />

            <TextView
                android:id="@+id/tvCommentMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                android:textColor="#8393c5"
                android:textSize="16sp"
                tools:text="更多1000条回复 > " />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>